generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_ad")

  email    String @unique
  passowrd String
}

model Client {
  id                       String   @id @default(uuid())
  createdAt                DateTime @default(now()) @map("created_at")
  updatedAt                DateTime @updatedAt @map("updated_ad")
  company                  String?
  head                     String?
  contactNumber            String?
  companyEstablishmentDate String?
  curator                  String?
  ownersBirthday           String?
}

model ActiveClient {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_ad")
  contractDate String?
  service      String?
  payment      String?
}

model LostCustomer {
  id                     String   @id @default(uuid())
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_ad")
  service                String?
  termsOfPayment         String?
  contractDate           String?
  contractExpirationDate String?
  terminationReason      String?
}

model PotentialClient {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_ad")
  position  String?
  source    String?
  notes     String?
  service   String?
}
